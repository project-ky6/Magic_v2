<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/toolbar"
    tools:context=".GUI.Fragment.AccountFragment">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:background="@color/toolbar"
            android:layout_height="wrap_content">
            <TextView
                android:paddingVertical="15dp"
                android:textSize="18dp"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:text="Tài khoản"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:background="@drawable/custom_border_layout_rd"
            android:orientation="vertical"
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/txtName"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bạn"
                android:textColor="@color/black"
                android:textSize="22dp"
                android:textStyle="bold" />
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hồ sơ"
                android:textColor="@color/black"
                android:textSize="16dp" />
            <Button
                android:id="@+id/btnUpdateInfo"
                android:paddingLeft="0dp"
                android:layout_marginTop="10dp"
                android:text="Cập nhật thông tin"
                android:textAlignment="textStart"
                android:layout_width="match_parent"
                app:backgroundTint="@null"
                android:paddingVertical="15dp"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:background="@drawable/custom_button_account"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/btnCart"
                android:paddingLeft="0dp"
                android:layout_marginTop="10dp"
                android:text="Giỏ hàng"
                android:textAlignment="textStart"
                android:layout_width="match_parent"
                app:backgroundTint="@null"
                android:paddingVertical="15dp"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:background="@drawable/custom_button_account"
                android:layout_height="wrap_content"/>

            <Button
                android:paddingLeft="0dp"
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/custom_button_account"
                android:paddingVertical="15dp"
                android:text="Lịch sử đặt hàng"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textSize="16dp"
                app:backgroundTint="@null" />

            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Địa chỉ"
                android:textColor="@color/black"
                android:textSize="16dp" />
            <Button
                android:paddingLeft="0dp"
                android:id="@+id/btnMap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/custom_button_account"
                android:paddingVertical="15dp"
                android:text="Địa chỉ gần bạn"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textSize="16dp"
                app:backgroundTint="@null" />
            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Khác"
                android:textColor="@color/black"
                android:textSize="16dp" />
            <Button
                android:id="@+id/btnLogout"
                android:layout_marginTop="5dp"
                android:text="Đăng xuất"
                android:textAlignment="textStart"
                android:layout_width="match_parent"
                app:backgroundTint="@null"
                android:paddingLeft="0dp"
                android:paddingVertical="15dp"
                android:textColor="@color/red"
                android:textSize="16dp"
                android:background="@drawable/custom_button_account"
                android:layout_height="wrap_content"/>
        </LinearLayout>

</LinearLayout>
</FrameLayout>